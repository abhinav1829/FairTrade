# Base image
FROM python:3.8-slim

# Work directory
WORKDIR /app

# Copy JSON and Python files
COPY current.json /app/
COPY current.py /app/

# Install any required libraries if 'current.py' has dependencies
COPY requirements.txt /app/ 
RUN pip install -r requirements.txt 

# Command to execute 'current.py' (if necessary)
CMD ["python", "current.py"] 
